{
  "name": "react-viewport-utils",
  "version": "0.0.1",
  "description": "Utility components for working with the viewport in react",
  "main": "dist/index.js",
  "scripts": {
    "start": "rm -rf ./.cache && parcel ./examples/index.html --out-dir='examples-dist'",
    "compile": "rollup -c",
    "test": "jest lib",
    "fmt": "prettier --write \"lib/*.{ts,tsx}\"  \"examples/*.{ts,tsx,html}\"",
    "publish": "npm run compile",
    "postversion": "git push && git push --tags"
  },
  "author": "Jannick Garthen <jannick.garthen@gmail.com>",
  "keywords": [
    "react",
    "viewport"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^16.4.11",
    "@types/react-dom": "^16.0.7",
    "concurrently": "^4.0.0",
    "jest": "^23.5.0",
    "parcel-bundler": "1.9.4",
    "prettier": "^1.14.2",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "rollup": "^0.65.0",
    "rollup-plugin-typescript2": "^0.16.1",
    "ts-jest": "^23.1.4",
    "typescript": "^3.0.1"
  },
  "dependencies": {
    "raf": "^3.4.0",
    "shallowequal": "^1.1.0"
  },
  "peerDependencies": {
    "react": "^16.4.2"
  },
  "bugs": {
    "url": "https://github.com/garthenweb/react-viewport-utils/issues"
  }
}
