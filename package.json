{
  "name": "react-viewport-utils",
  "version": "1.9.1",
  "description": "Utility components for working with the viewport in react",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "rm -rf ./.cache && parcel ./examples/index.html --out-dir='examples-dist'",
    "precompile": "rm -rf dist",
    "compile": "rollup -c",
    "test": "jest",
    "fmt": "prettier --write \"lib/*.{ts,tsx}\" \"dev-tools/lib/*.{ts,tsx}\" \"examples/*.{ts,tsx}\"",
    "prepublish": "npm run compile",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/garthenweb/react-viewport-utils"
  },
  "bugs": {
    "url": "https://github.com/garthenweb/react-viewport-utils/issues"
  },
  "engines": {
    "node": "^8.9.0 || >= 10.13.0"
  },
  "author": "Jannick Garthen <jannick.garthen@gmail.com>",
  "keywords": [
    "react",
    "viewport",
    "scroll",
    "dimensions",
    "size",
    "resize",
    "event",
    "observer",
    "window",
    "screen"
  ],
  "license": "MIT",
  "devDependencies": {
    "@testing-library/react": "^8.0.1",
    "@types/jest": "^24.0.15",
    "@types/memoize-one": "^4.1.1",
    "@types/node": "^12.0.10",
    "@types/react": "^16.8.22",
    "@types/react-dom": "^16.8.4",
    "concurrently": "^4.1.0",
    "jest": "^24.8.0",
    "parcel-bundler": "1.12.3",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "rollup": "^1.16.2",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-typescript2": "^0.21.2",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.2"
  },
  "dependencies": {
    "memoize-one": "^5.0.0"
  },
  "peerDependencies": {
    "react": "^16.3.0"
  }
}
