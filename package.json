{
  "name": "react-viewport-utils",
  "version": "1.8.0",
  "description": "Utility components for working with the viewport in react",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "start": "rm -rf ./.cache && parcel ./examples/index.html --out-dir='examples-dist'",
    "precompile": "rm -rf dist",
    "compile": "rollup -c",
    "test": "jest",
    "fmt": "prettier --write \"lib/*.{ts,tsx}\"  \"examples/*.{ts,tsx}\"",
    "prepublish": "npm run compile",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/garthenweb/react-viewport-utils"
  },
  "bugs": {
    "url": "https://github.com/garthenweb/react-viewport-utils/issues"
  },
  "engines": {
    "node": "^8.9.0 || ^10.13.0"
  },
  "author": "Jannick Garthen <jannick.garthen@gmail.com>",
  "keywords": [
    "react",
    "viewport",
    "scroll",
    "dimensions",
    "size"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.5",
    "@types/memoize-one": "^4.1.0",
    "@types/node": "^10.12.26",
    "@types/react": "^16.8.3",
    "@types/react-dom": "^16.8.1",
    "concurrently": "^4.1.0",
    "jest": "^24.1.0",
    "parcel-bundler": "1.11.0",
    "prettier": "^1.16.4",
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "rollup": "^1.1.2",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-typescript2": "^0.19.2",
    "ts-jest": "^23.10.5",
    "typescript": "^3.3.3"
  },
  "dependencies": {
    "memoize-one": "^5.0.0"
  },
  "peerDependencies": {
    "react": "^16.3.0"
  }
}
