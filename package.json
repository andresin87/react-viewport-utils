{
  "name": "react-viewport-utils",
  "version": "1.12.1",
  "description": "Utility components for working with the viewport in react",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "start": "rm -rf ./.cache && parcel ./examples/index.html --out-dir='examples-dist'",
    "precompile": "rm -rf dist",
    "compile": "rollup -c",
    "test": "jest",
    "fmt": "prettier --write \"lib/*.{ts,tsx}\"  \"examples/*.{ts,tsx}\"",
    "prepublish": "npm run compile",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/garthenweb/react-viewport-utils"
  },
  "bugs": {
    "url": "https://github.com/garthenweb/react-viewport-utils/issues"
  },
  "engines": {
    "node": "^8.9.0 || >= 10.13.0"
  },
  "author": "Jannick Garthen <jannick.garthen@gmail.com>",
  "keywords": [
    "react",
    "viewport",
    "scroll",
    "dimensions",
    "size",
    "resize",
    "event",
    "observer",
    "window",
    "screen"
  ],
  "license": "MIT",
  "devDependencies": {
    "@testing-library/react": "^12.1.1",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.1",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "concurrently": "^6.2.2",
    "coveralls": "^3.1.1",
    "jest": "^27.2.3",
    "parcel-bundler": "1.12.5",
    "prettier": "^2.4.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "rollup": "^2.57.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "memoize-one": "^5.1.1"
  },
  "peerDependencies": {
    "react": "^16.3.0 || >= 17.0.0"
  }
}
