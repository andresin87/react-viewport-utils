{
  "compilerOptions": {
    "declaration": true,
    "moduleResolution": "Node",
    "module": "es6",
    "target": "ES2015",
    "outDir": "./dist",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"]
  },
  "include": [
    "lib"
  ],
  "exclude": [
    "dist",
    "examples-dist",
    ".cache"
  ]
}
